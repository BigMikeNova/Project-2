<section class="recipe-card" id="recipe-card">
  <a href="/recipes/{{id}}">
    <h3>{{recipe_name}}</h3>
    <div class="recipe-details">
      <p>Category: {{recipe_category}}</p>
      <p>Ingredients: {{ingredients}}</p>
      <p>Measurements: {{recipe_measurement}}</p>
      <p>Instructions: {{recipe_instructions}}</p>
      <p>Cooktime: {{recipe_cooktime}}</p>
      <p>Servings: {{recipe_servings}}</p>
      <p>By: {{user.username}}</p>
    </div>
  </a>
    </section>
